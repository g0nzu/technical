<h1 class"mb-4">Page manager</h1>

<form id="form-new" class="card card-body mb-4">
  <div class="mb3">
      <label class="form-label">Ruta (Slug)</label>
      <input id="new-slug" class="form-control" placeholder="ej: servicios" required>
  </div>
  <div class="mb-3">
    <label class="form-label">HTML</label>
    <textarea id="new-html" class="form-control" rows="5" placeholder="<h1> Mi tittle </h1>" required></textarea>
  </div>
  <button id="btn-create" class="btn btn-primary">Create page</button>
</form>

<div class="card mb-4">
  <div class="card-body">
    <h2 class="h5 mb-3">Existing pages</h2>
    <div class="table table-sm align-middle">
      <thead>
       <tr>
          <th>Ruta</th>
          <th>Archivos</th>
          <th class="text-end">Acciones</th>
        </tr>
      </thead>
      <tbody id="table-webs"></tbody>
    </div>
  </div>
</div>

<div class="row g-4">
  <div class="col-md-6">
    <form id="form-edit" class="card card-body">
      <div class="mb-2">
        <label class="form-label">Editing</label>
        <input id="edit-slug" class="form-control" readonly placeholder="Select on your table"> 
      </div>
      <div class="mb-3">
        <label class="form-label">HTML</label>
       <textarea id="eddit-html" class="btn btn-sucess" disabled> Save changes </textarea>
    </form>
    </div>
    <div class="col-md-6">
      <div class="card card-body">
        <h3 class="H6"Preview></h3>
        <div id="preview" class="border p-3" style="min-height:200px;"></div>
      </div>
    </div>
  </div>
</div>